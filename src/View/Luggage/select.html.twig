{% extends 'layout.html.twig' %}

{% block content %}

    <h2>La selection</h2>
    <p>Ne partez plus jamais en oubliant des choses dans votre valise !</p>
    <div>
        <form action="" method="post">

            <h3>Vêtements</h3>
           {# {{ dump() }}#}
            {% for luggage in luggages %}
            {% if luggage.category == 'Vêtement' %}
            <div class="d-flex flex-wrap justify-content-around">
                <div class="card" style="width: 10rem;">
                    <img src="/assets/images/{{ luggage.image }}" class="card-img-top al-widthInherit" alt="dessin de {{ luggage.name }}">
                    <div class="card-body pt-1 pb-0 d-flex flex-column justify-content-between align-items-start">
                        <h5 class="card-title">{{ luggage.name }}</h5>
                        <div class="form-check">
                            <input name="{{ luggage.name }}" class="form-check-input al-checkGreen" type="checkbox" value=""
                                   id="flexCheckDefault">
                            <label class="form-check-label" for="{{ luggage.name }}">
                                Ajouter
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% endfor %}


            <h3>Equipements</h3>
            {% for item in items %}

            {% endfor %}

            <h3>Electronique</h3>
            {% for item in items %}

            {% endfor %}

            <h3>Trousse de toilette</h3>
            {% for item in items %}

            {% endfor %}

        </form>
    </div>

{% endblock %}
