<form method="post">
    {% if errors %}
        <ul>
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <input type="hidden" value="{{ user.id }}" name="id">

    <label for="firstname"> First name</label>
    <input type="text" value="{{ user.firstname }}" name="firstname" id="firstname"> <br>
    <br>

    <label for="lastname"> Last name</label>
    <input type="text" value="{{ user.lastname }}" name="lastname" id="lastname"><br>
    <br>

    <label for="email"> Email</label>
    <input type="text" value="{{ email }}" name="email" id="email"><br>
    <br>

    <label for="mg_password"> Password</label>
    <input type="text" value="{{ mg_password }}" name="mg_password" id="mg_password"><br>
    <br>
    <button>Submit</button>
</form>
