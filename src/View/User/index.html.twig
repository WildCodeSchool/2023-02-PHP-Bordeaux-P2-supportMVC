{% extends 'layout.html.twig' %}

{% block title %}Index - Users{% endblock %}
{% block content %}
    <h1>Hello From UserController</h1>
    <ul>
        {% for user in users %}
            <li>
                <a href="users/show?id={{ user.id }}">
                    {{ user.firstname }} / {{ user.lastname }} / {{ user.email }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
